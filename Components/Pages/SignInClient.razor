@page "/signinclient"
@using System.ComponentModel.DataAnnotations
@using PetAdoptionProject.Services
@using PetAdoptionProject.Data

<h3>Sign In</h3>

<EditForm FormName="SignInClient" Model="@loginModel" OnValidSubmit="@HandleSignIn">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <style>
        .narrow-input {
            width: 200px;
        }
    </style>

    <div class="form-group">
        <label for="email">Email:</label>
        <InputText id="email" @bind-Value="loginModel.Email" class="form-control narrow-input" />
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <InputText id="password" @bind-Value="loginModel.Password" type="password" class="form-control narrow-input" />
    </div>

    <a href="https://www.petfinder.com/" target="_blank" class="btn btn-primary">Sign In</a>
</EditForm>

@code {
    private LoginModel loginModel = new LoginModel();
    private string? errorMessage;

    [Inject]
    private authService authService { get; set; }
    [Inject]
    private NavigationManager? NavigationManager { get; set; }

    private async Task HandleSignIn()
    {
        var isAuthenticated = await authService.AuthenticateUserAsync(loginModel.Email, loginModel.Password);
        if (isAuthenticated)
        {
            // Authentication successful, redirect user to another page or perform desired action
            NavigationManager.NavigateTo("https://www.petfinder.com/");
        }
        else
        {
            // Authentication failed, display error message
            errorMessage = "Invalid email or password.";
        }
    }
    public class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string? Email { get; set; }

        [Required(ErrorMessage = "Password is required")]
        public string? Password { get; set; }
    }
}
